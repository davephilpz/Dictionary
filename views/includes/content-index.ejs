<section class="section-search">
  <form class="form-word-search">
    <div class="form__search">
      <label for="search-box"></label>
      <input class="form__search-input" type="text" name="search-box"
      id="search-box" placeholder="Search word" alt="Search word in kanji,
      hiragana, katakana, romaji or English." onkeyup="sendData()"
    </div>
    <button class="form__btn" type="submit">Search</button>
  </form>
</section>
<section class="search-results" id="search-results"></section>

<script>
  function sendData(e) {
    const input = document.getElementById("search-box").value;
    console.log(input);
    document.getElementById("search-results").innerHTML = input;
    fetch("getWords", {
      method: "POST",
      "Content-Type": "application-json",
      body: JSON.stringify({ payload: e.value }),
    });
  }
</script>
