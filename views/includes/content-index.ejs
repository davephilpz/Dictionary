<section class="section-search">
  <form class="form-word-search" action="/search:word">
    <div class="form__search">
      <label for="search-box"></label>
      <input class="form__search-input" type="text" name="search"
      id="search-box" placeholder="Search word" alt="Search word in kanji,
      hiragana, katakana, romaji or English." onkeyup="sendData(this)"
    </div>
    <button class="search__btn" type="submit">Search</button>
  </form>
</section>
<section class="search-results" id="search-results"></section>

<script>
  function sendData(e) {
    const input = document.getElementById("search-box").value;
    console.log(input);
    document.getElementById("search-results").innerHTML = input;
    fetch("/search:word", {
      method: "POST",
      headers: { "Content-Type": "application-json" },
      body: JSON.stringify({ searchString: input }),
    });
  }
</script>
