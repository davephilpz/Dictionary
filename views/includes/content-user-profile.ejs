<section class="user-profile">
  <header class="user-profile__header">
    <picture>
      <source
        media="(min-width:800px)"
        srcset="img/profile-picture-full.webp"
        type="image/webp"
      />
      <source
        media="(min-width:800px)"
        srcset="img/profile-picture-full.jpg"
        type="image/png"
      />
      <source
        media="(max-width:800px)"
        srcset="img/profile-picture-mobile.webp"
        type="image/webp"
      />
      <source
        media="(max-width:800px)"
        srcset="img/profile-picture-mobile.jpg"
        type="image/png"
      />
      <img
        class="profile__img"
        src="img/users/profile-picture.jpg"
        alt="user profile picture"
      />
    </picture>

    <h2 class="subtitle">
      Welcome back <%= user.name[0].toUpperCase() + user.name.substring(1) %>
    </h2>
  </header>
</section>

<p class="generic-text">Member since: <%= formattedDate %></p>

<p class="generic-text">Word of the day: <%= mappedWordOfTheDay %></p>

<% if (mappedSentenceOfTheDay.includes(',')) { %>
<p class="generic-text">
  Sentence of the day: <%= mappedSentenceOfTheDay.replace(/,/g,
  '').split('。')[0] %>。
</p>
<% } else { %>
<p class="generic-text">
  Sentence of the day: <%= mappedSentenceOfTheDay.split('。')[0] %>。
</p>
<% } %>

<h2 class="subtitle">Words in my collection</h2>
<p class="generic-text">Total: <%= myWords %></p>
<p class="generic-text">
  <span class="review__card--button red">Red</span> Unfamiliar words: <%= red %>
</p>
<p class="generic-text">
  <span class="review__card--button orange">Orange</span> Somewhat familiar
  words: <%= orange %>
</p>
<p class="generic-text">
  <span class="review__card--button yellow">Yellow</span> Familiar words: <%=
  yellow %>
</p>
<p class="generic-text">
  <span class="review__card--button green">Green</span> Mastered words: <%=
  green %>
</p>
